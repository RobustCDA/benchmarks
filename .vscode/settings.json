{
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "/Library/TeX/texbin/latexmk",
      "args": [
        "-synctex=1",
        "-pdf",
        "-pdflatex=/Library/TeX/texbin/pdflatex",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    }
  ],

  // ✅ Define how to build (you can customize later)
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (TeX Live 2025)",
      "tools": ["latexmk"]
    }
  ],

  // ✅ (Optional) explicitly prepend TeX Live to PATH inside VS Code
  "terminal.integrated.env.osx": {
    "PATH": "/Library/TeX/texbin/latexmk:${env:PATH}"
  }
}
